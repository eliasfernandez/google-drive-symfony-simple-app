{% extends 'base.html.twig' %}
{% block body %}
    <div class="flex">
        <fieldset class="flex-1 mx-8">
            {{ form_start(create, {'attr': {'class': 'flex'}}) }}
                {{ form_errors(create) }}
                {{ form_row(create.name, {'attr': {'placeholder': 'New folder name'}, 'label': false}) }}
                {{ form_row(create.submit) }}
            {{ form_end(create) }}
        </fieldset>
        <fieldset class="flex-1">
            {{ form_start(upload, {'attr': {'class': 'flex'}}) }}
                {{ form_errors(upload) }}
                {{ form_row(upload.file, {'attr': {'placeholder': 'New file'}, 'label': false}) }}
                {{ form_row(upload.submit) }}
            {{ form_end(upload) }}
        </fieldset>
    </div>
    {% if folder %}
        <div class="flex flex-row">
            <div class="basis-1/5 rounded-lg bg-gray-50 p-4 m-2">
                <a href="/files">Back to file list</a>
            </div>
        </div>
    {% endif %}
    {% for file in files %}
        <div class="flex flex-row">
            <div class="basis-1/5 rounded-lg bg-gray-50 p-4 m-2">
                <nav class="flex space-x-4">
                    <a href="/files/{{ file.id }}/delete"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6"><path fill-rule="evenodd" d="M16.5 4.478v.227a48.816 48.816 0 0 1 3.878.512.75.75 0 1 1-.256 1.478l-.209-.035-1.005 13.07a3 3 0 0 1-2.991 2.77H8.084a3 3 0 0 1-2.991-2.77L4.087 6.66l-.209.035a.75.75 0 0 1-.256-1.478A48.567 48.567 0 0 1 7.5 4.705v-.227c0-1.564 1.213-2.9 2.816-2.951a52.662 52.662 0 0 1 3.369 0c1.603.051 2.815 1.387 2.815 2.951Zm-6.136-1.452a51.196 51.196 0 0 1 3.273 0C14.39 3.05 15 3.684 15 4.478v.113a49.488 49.488 0 0 0-6 0v-.113c0-.794.609-1.428 1.364-1.452Zm-.355 5.945a.75.75 0 1 0-1.5.058l.347 9a.75.75 0 1 0 1.499-.058l-.346-9Zm5.48.058a.75.75 0 1 0-1.498-.058l-.347 9a.75.75 0 0 0 1.5.058l.345-9Z" clip-rule="evenodd" /></svg></a>
                    {% if file.type == 'folder' %}
                        <a href="/files/{{ file.id }}"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6"><path d="M19.906 9c.382 0 .749.057 1.094.162V9a3 3 0 0 0-3-3h-3.879a.75.75 0 0 1-.53-.22L11.47 3.66A2.25 2.25 0 0 0 9.879 3H6a3 3 0 0 0-3 3v3.162A3.756 3.756 0 0 1 4.094 9h15.812ZM4.094 10.5a2.25 2.25 0 0 0-2.227 2.568l.857 6A2.25 2.25 0 0 0 4.951 21H19.05a2.25 2.25 0 0 0 2.227-1.932l.857-6a2.25 2.25 0 0 0-2.227-2.568H4.094Z" /></svg></a>
                    {% endif %}
                </nav>
            </div>
            <div class="basis-4/5 rounded-lg bg-gray-50 p-4 m-2">
                {{ file.name }}
            </div>
        </div>
    {% endfor %}
{% endblock %}

{% block title %}
File list
{% endblock %}

